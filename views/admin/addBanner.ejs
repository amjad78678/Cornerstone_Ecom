<script>
  setTimeout(function() {
    var errorContainer = document.getElementById('errorContainer');
    if (errorContainer) {
      errorContainer.style.display = 'none';
    }
  }, 2000);



function validateForm(){

    const title=document.getElementById('banner-title').value
    const description=document.getElementById('banner-description').value
    const event=document.getElementById('banner-event').value
    const imageInput = document.getElementById('bannerImage');

 const nameRegex = /^[a-zA-Z\s]+$/;
 const descriptionRegex = /^[a-zA-Z0\s.,;:'"()?!]+$/m;

  if (!nameRegex.test(title)) {
    document.getElementById('nameError').innerHTML = 'Title should only contain alphabets';
    return false;
  } else {
    document.getElementById('nameError').innerHTML = '';
  }

    if (!descriptionRegex.test(description)) {
    document.getElementById('descriptionError').innerHTML = 'Description should only contain alphabets';
    return false;
  } else {
    document.getElementById('descriptionError').innerHTML = '';
  }
  
      if (!nameRegex.test(event)) {
    document.getElementById('eventError').innerHTML = 'Event should only contain alphabets';
    return false;
  } else {
    document.getElementById('eventError').innerHTML = '';
  }

   // Check if the file input is empty
    if (!imageInput.files.length) {
        document.getElementById('imageError').innerHTML = 'Please select an image';
        return false;
    } else {
        document.getElementById('imageError').innerHTML = '';
    }



  return true

}



</script>

